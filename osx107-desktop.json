{
  "min_packer_version": "0.7.0",
  "variables": {
    "version": "0.1.0",
    "cm": "nocm",
    "cm_version": "",
    "iso_url": "dmg/iso/OSX_InstallESD_10.7_11A511.dmg",
    "autologin": "",
    "install_xcode_cli_tools": "true",
    "update": "true",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "install_vagrant_keys": true
  },
  "builders": [{
    "vm_name": "osx107-desktop",
    "type": "vmware-iso",
    "guest_os_type": "darwin11-64",
    "iso_url": "{{ user `iso_url` }}",
    "iso_checksum_type": "none",
    "ssh_username": "{{ user `ssh_username` }}",
    "ssh_password": "{{ user `ssh_password` }}",
    "ssh_wait_timeout": "10000s",
    "tools_upload_flavor": "darwin",
    "boot_wait": "2s",
    "disk_size": 20480,
    "shutdown_command": "echo '{{ user `ssh_username` }}'|sudo -S shutdown -h now",
    "skip_compaction": true,
    "ssh_password": "vagrant",
    "vmx_data": {
      "cpuid.coresPerSocket": "1",
      "memsize": "2048",
      "numvcpus": "1",
      "firmware": "efi",
      "keyboardAndMouseProfile": "macProfile",
      "smc.present": "TRUE",
      "hpet0.present": "TRUE",
      "ich7m.present": "TRUE",
      "ehci.present": "TRUE",
      "usb.present": "TRUE"
    }
  },
  {
    "vm_name": "osx107-desktop",
    "type": "virtualbox-iso",
    "guest_os_type": "MacOS107_64",
    "iso_url": "{{ user `iso_url` }}",
    "iso_checksum_type": "none",
    "ssh_username": "{{ user `ssh_username` }}",
    "ssh_password": "{{ user `ssh_password` }}",
    "ssh_wait_timeout": "10000s",
    "ssh_port": 22,
    "guest_additions_mode": "disable",
    "boot_wait": "2s",
    "iso_interface": "sata",
    "hard_drive_interface": "sata",
    "disk_size": 20480,
    "shutdown_command": "echo '{{ user `ssh_username` }}'|sudo -S shutdown -h now",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--audiocontroller", "hda"],
      ["modifyvm", "{{.Name}}", "--boot1", "dvd"],
      ["modifyvm", "{{.Name}}", "--boot2", "disk"],
      ["modifyvm", "{{.Name}}", "--chipset", "ich9"],
      ["modifyvm", "{{.Name}}", "--cpuidset", "00000001", "000006fb", "00000800", "80000209", "078bfbff"],
      ["modifyvm", "{{.Name}}", "--firmware", "efi"],
      ["modifyvm", "{{.Name}}", "--hpet", "on"],
      ["modifyvm", "{{.Name}}", "--keyboard", "usb"],
      ["modifyvm", "{{.Name}}", "--memory", "2048"],
      ["modifyvm", "{{.Name}}", "--mouse", "usbtablet"],
      ["modifyvm", "{{.Name}}", "--vram", "9"]
    ]
  },
  {
    "vm_name": "osx107-desktop",
    "type": "parallels-iso",
    "guest_os_type": "win-8",
    "iso_url": "{{ user `iso_url` }}",
    "iso_checksum_type": "none",
    "ssh_username": "{{ user `ssh_username` }}",
    "ssh_password": "{{ user `ssh_password` }}",
    "ssh_wait_timeout": "10000s",
    "ssh_port": 22,
    "parallels_tools_flavor": "mac",
    "boot_wait": "5s",
    "disk_size": 20480,
    "shutdown_command": "echo '{{ user `ssh_username` }}'|sudo -S shutdown -h now",
    "prlctl": [
      ["set", "{{.Name}}", "--memsize", "2048"],
      ["set", "{{.Name}}", "--memquota", "512:2048"],
      ["set", "{{.Name}}", "--cpus", "2"],
      ["set", "{{.Name}}", "--distribution", "macosx"],
      ["set", "{{.Name}}", "--3d-accelerate", "highest"],
      ["set", "{{.Name}}", "--high-resolution", "off"],
      ["set", "{{.Name}}", "--auto-share-camera", "off"],
      ["set", "{{.Name}}", "--auto-share-bluetooth", "off"],
      ["set", "{{.Name}}", "--on-window-close", "keep-running"],
      ["set", "{{.Name}}", "--isolate-vm", "on"],
      ["set", "{{.Name}}", "--shf-host", "off"]
    ]
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "script/support/set_kcpassword.py",
      "destination": "/private/tmp/set_kcpassword.py"
    },
    {
      "type": "shell",
      "environment_vars": [
        "AUTOLOGIN={{user `autologin`}}",
        "CM={{user `cm`}}",
        "CM_VERSION={{user `cm_version`}}",
        "UPDATE={{user `update`}}",
        "INSTALL_XCODE_CLI_TOOLS={{user `install_xcode_cli_tools`}}",
        "INSTALL_VAGRANT_KEYS={{user `install_vagrant_keys`}}",
        "SSH_USERNAME={{ user `ssh_username` }}",
        "SSH_PASSWORD={{ user `ssh_password` }}"
      ],
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E -S bash '{{ .Path }}'",
      "scripts": [
        "script/vagrant.sh",
        "script/autologin.sh",
        "script/update.sh",
        "script/xcode-cli-tools.sh",
        "script/cmtool.sh",
        "script/vmware.sh",
        "script/parallels.sh",
        "script/add-network-interface-detection.sh"
      ]
    }
  ],
  "post-processors": [{
    "type": "vagrant",
    "keep_input_artifact": false,
    "vagrantfile_template": "tpl/vagrantfile-osx107-desktop.tpl",
    "output": "box/{{.Provider}}/osx107-desktop-{{user `cm`}}{{user `cm_version`}}-{{user `version`}}.box"
  }]
}
